" Vundle
" When adding new plugins call: "PluginInstall"
set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'VundleVim/Vundle.vim'
Plugin 'octol/vim-cpp-enhanced-highlight'
Plugin 'flazz/vim-colorschemes'
Plugin 'easymotion/vim-easymotion'
Plugin 'google/vim-maktaba'
Plugin 'google/vim-codefmt'
Plugin 'google/vim-glaive'
call vundle#end()
filetype plugin indent on

" Vim 

" Hotkeys
set pastetoggle=<F2>

" Tabs
set noet ci pi sts=8 sw=8 ts=8

" Powerline
set rtp+=$HOME/.local/lib/python2.7/site-packages/powerline/bindings/vim
set laststatus=2
set t_Co=256

" Autocomplete
ino " ""<left>
ino ' ''<left>
ino ( ()<left>
ino [ []<left>
ino { {}<left>
ino {<CR> {<CR>}<ESC>O
ino {;<CR> {<CR>};<ESC>O
ino /* /*   */<left><left><left><left>
ino /*<CR> /*<CR>** <CR>*/<UP><right><right>

" Colors
" colorscheme elflord
colorscheme badwolf

" Mouse settings
set mouse=a

" Whitespace
set list listchars=eol:¬,tab:>-,trail:·,extends:>,precedes:<,space:·
hi SpecialKey ctermfg=247 ctermbg=234

" Highlighting
set number
highlight LineNr term=bold cterm=NONE ctermfg=DarkGrey ctermbg=NONE gui=NONE guifg=DarkGrey guibg=NONE
set cursorline

" Powerline
" For multiline clone this
" https://github.com/yongjhih/rc/blob/master/.config/powerline/themes/shell/default.json

" Easymotion
let mapleader = "\<Space>"
